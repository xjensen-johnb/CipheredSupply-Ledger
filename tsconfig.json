{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "noImplicitAny": false
  },
  "include": ["./test/**/*.ts", "./scripts/**/*.ts", "./typechain-types/**/*.ts"]
}
